<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:text="Lớp Học"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:background="@drawable/bg_conner_8"
            android:id="@+id/sp_name_course"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Phòng học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <EditText
          android:id="@+id/edt_room"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Meet room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_meet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:id="@+id/chk_isTest"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp"
        android:text="Thi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_date_time_schedule"
            android:src="@drawable/ic_calendar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date_schedule_add"
            android:layout_marginStart="8dp"
            android:text="DD / MM / YYYY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time_schedule_add"
            android:layout_marginStart="8dp"
            android:text="HH:MM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.widget.Button
        android:id="@+id/btn_add_schedule"
        android:layout_marginTop="16dp"
        android:text="Thêm lịch học"
        android:textColor="@color/white"
        android:background="@drawable/bg_blue_gradient_conner_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
