<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:fontFamily="@font/robotomedium"
        android:textSize="22sp"
        android:id="@+id/tv_hello"
        android:text="Have a lucky day,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderView"
        android:layout_below="@id/tv_hello"
        android:layout_width="match_parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="16dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderStartAutoCycle="true"
        android:layout_height="220dp"/>

    <TextView
        android:id="@+id/tv_hello_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sliderView"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/robotomedium"
        android:text="Bạn Cần Gì ?"
        android:textSize="25sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello_2"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_action_course_register_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_book_90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_action_course_register_course"
            android:layout_alignStart="@id/iv_action_course_register_course"
            android:layout_alignEnd="@id/iv_action_course_register_course"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:text="Đăng kí khóa học"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/iv_action_course_register_course"
            android:id="@+id/iv_action_course_registered"
            android:src="@drawable/ic_read_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_action_course_registered"
            android:layout_alignStart="@id/iv_action_course_registered"
            android:layout_alignEnd="@id/iv_action_course_registered"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:text="Khóa học của tôi"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_action_schedule_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_action_course_registered"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_calendar_90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_action_schedule_course"
            android:layout_alignStart="@id/iv_action_schedule_course"
            android:layout_alignEnd="@id/iv_action_schedule_course"
            android:fontFamily="@font/robotomedium"
            android:gravity="center"
            android:text="Lịch học"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>