<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamstudio.asm_duytam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASM_DUYTAM">
        <activity
            android:name=".activities.courseaction.ScheduleActivity"
            android:exported="true" />
        <activity
            android:name=".activities.courseaction.MyCourseActivity"
            android:exported="true" />
        <activity
            android:name=".activities.courseaction.RegisterCoureActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ReadNewsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.FlashActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.ReadNewsService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>